<div class="playlist-page">

  <div class="playlist-create-div">
    <a href="/playlist-add" class="create-playlist">Create Playlist</a>
  </div>

  <div class="playlists-div products-grid">
    {{#each playlist}}
    <a href="/one-playlist/{{this._id}}" class="playlists-wrapper product-item-wrapper">
      <div class="playlist-product-img">
        <p class="playlist-product-name">{{this.name}}</p>
        <p class="product-cat">
          {{#each this.category}}
          {{this}}
          {{/each}}
        </p>
        <p class="product-cat">{{this.platform}}</p>
        <p class="product-price">{{this.description}}</p>
    </a>
    {{/each}}
  </div>

</div>
</div>