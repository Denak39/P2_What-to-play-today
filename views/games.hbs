  {{!-- CATEGORY --}}
  <aside>
    <h4>Game filter</h4>

  </aside>

  {{!-- PRODUCTS--}}
<section class="products-wrapper">
    <div class="products-infos">
      <h4 class="products-title">
        {{#compare category "collection" operator="==="}}
        Whole
        {{/compare}}
        {{#compare category "collection" operator="!="}}
        {{category}}
        {{/compare}}
        collection <span id="products_count" class="products-count">({{games.length}})</span>
      </h4>
      <p class="products-subtitle">Prepare for your miles with the latest styles and colors of womenâ€™s running shoes.
        Take advantage of signature a footwear technologies including Zoom, Flyknite, and find the
        pairs running shoes that align with your running philosophy.</p>
    </div>
    {{#unless games}}
    <p>Sorry, no games yet !</p>
    {{/unless}}
    <div id="products_grid" class="products-grid flexed-item">
      {{#each games}}
<a href="/one-product/{{this._id}}" class="product-item-wrapper">
    <div class="product-img">
        <img src="{{this.image}}" alt="{{this.name}} : what a nice pair of kicks">
    </div>
    <p class="product-name">{{this.name}}</p>
    <p class="product-cat">{{this.category}}</p>
    <p class="product-price">${{this.price}}</p>
</a>      {{/each}}
    </div>
  </section>
</div>