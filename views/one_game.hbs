<div class="one-product-container">
  <div class="game-info">
    {{!-- --}}
    {{!--<div class="game-info-header">--}}

    <div class="game-img-container">
      <h1 class="game-name titles">{{game.name}}</h1>
      <img src="{{game.image}}" alt="img-game" class="game-img">
    </div>

    <div class="description">
      <h1 class="game-description titles">DESCRIPTION</h1>
      <p class="game-description description-text">{{game.description}}</p>
    </div>
    {{!-- </div>--}}
    <div class="game-attributes">
      <div class="game-platforms">
        <p class="uppercase">Platforms</p>
        <div>{{game.platform}}</div>
      </div>
      <div class="game-genres">
        <p class="uppercase">Genre</p>
        <div>{{game.category}}</div>
      </div>
      <div class="game-release">
        <p class="uppercase">Released</p>
        <div>2020</div>
      </div>
      <div class="game-price">
        <p class="uppercase">Price</p>
        <div>{{game.price}}</div>
      </div>
    </div>


  </div>
</div>
<button class="add-to-favs-btn">Add to my favorites <img class="fav" src="/images/One-Game-Page-Icons/heart.png"
    alt="Heart-icon"></button>