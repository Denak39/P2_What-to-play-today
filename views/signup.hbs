{{#if msg}}
<p class="message {{msg.status}}">{{msg.text}}</p>
{{/if}}
<form method="post" action="/auth/signup" id="form_user" class="form-signup">
  <div class="names">
    <div class="form-item-wrapper flexed-item firstname-signup">
      <label for="firstname" class="label-ref label">Name</label>
      <input id="firstname" name="name" type="text" class="input-text input" placeholder="Toto" required>
    </div>
    <div class="form-item-wrapper flexed-item lastname-signup">
      <label for="lastname" class="label-ref label">Last Name</label>
      <input id="lastname" name="lastname" type="text" class="input-text input" placeholder="Tutu" required>
    </div>
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="email" class="label-ref label">Email</label>
    <input id="email" name="email" type="email" class="input-text input" placeholder="toto.tutu@gmail.com" required>
  </div>
  <div class="form-item-wrapper flexed-item">
    <label for="password" class="label-ref label">Password</label>
    <input id="password" name="password" type="password" class="input-text input" placeholder="••••••" required>
  </div>
  <button class="button-primary white btn-signup">Create Account</button>
</form>

<div class="has-account">
  <p class="form-sub-infos">Already have an account ? </p>
  <a href="/auth/signin" class="button-link-form signin-signup-page">Sign In</a>
</div>